@model ASP.netCorePracticeList.Models.StringLengthValidator
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<h2>String Length Validator</h2>
@using (Html.BeginForm())
{
    <div class="table-bordered" style="width:500px;padding:10px;">
        <div class="row mt-2">
            <div class="col-md-4">
                @Html.Label("Comment:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.comment, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.comment, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
        @if (@ViewBag.comment != null)
        {
            <div class="row mt-2">
                <div class="col-md-4">
                    @Html.Label("Comment:")
                </div>
                <div class="col-md-8">
                    @ViewBag.comment
                </div>
            </div>
        }
    </div>
}