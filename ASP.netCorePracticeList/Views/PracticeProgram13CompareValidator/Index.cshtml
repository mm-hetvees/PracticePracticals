@model ASP.netCorePracticeList.Models.CompareValidator

@{
    ViewData["Title"] = "Index";
}
<h2>Index</h2>


@using (Html.BeginForm())
{
    <div class="table-bordered" style="width:500px;padding:10px;">
        <div class="row mt-2">
            <div class="col-md-4">
                @Html.Label("Password:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.Password, htmlAttributes: new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(model => model.Password, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-4">
                @Html.Label("Confirm Password:")
            </div>
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.RetypePassword, htmlAttributes: new { @class = "form-control", @type = "password" })
                @Html.ValidationMessageFor(model => model.RetypePassword, null, htmlAttributes: new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12 text-center">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
        @if (@ViewBag.Password != null && @ViewBag.ConfirmPassword != null)
        {
            <div class="row mt-2">
                <div class="col-md-6">
                    @Html.Label("Entered Password Is:")
                </div>
                <div class="col-md-6">
                    @ViewBag.Password
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    @Html.Label("Entered Confirm Password Is:")
                </div>
                <div class="col-md-6">
                    @ViewBag.ConfirmPassword
                </div>
            </div>
        }
    </div>
}