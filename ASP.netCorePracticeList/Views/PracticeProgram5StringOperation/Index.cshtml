<h1>String Operation</h1>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-2">
            @Html.Label("Enter String:")
        </div>
        <div class="col-4">
            @Html.TextBox("inputString", null, null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @Html.Label("Choose:")
        </div>
        <div class="col-4">
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "UpperCase", true)
                    @Html.Label("UpperCase", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "LowerCase")
                    @Html.Label("LowerCase", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "LeftCharacters")
                    @Html.Label("LeftCharacters", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "RightCharacters")
                    @Html.Label("RightCharacters", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <input type="submit" class="btn btn-primary" value="Submit" />
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            @Html.Label("Output:")
        </div>
        <div class="col-4">
            @Html.TextBox("Response", null, null, htmlAttributes: new { @class = "form-control", @readonly = true })
        </div>
    </div>
}

