<h1>Numeric Operation</h1>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-2">
            @Html.Label("Enter A Number:")
        </div>
        <div class="col-4">
            @Html.TextBox("No",null,null,htmlAttributes:new { @class="form-control",@type="number"})
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-2">
            @Html.Label("Choose:")
        </div>
        <div class="col-4">
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "Even Or Odd", true)
                    @Html.Label("Even Or Odd", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "Positive Or Negative")
                    @Html.Label("Positive Or Negative", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "Square")
                    @Html.Label("Square", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
            <div class="row">
                <div class="col">
                    @Html.RadioButton("RadioChoice", "Factorial")
                    @Html.Label("Factorial", null, htmlAttributes: new { @class = "ml-1" })
                </div>
            </div>
        </div>
    </div><div class="row mt-2">
        <div class="col">
            <input type="submit" value="Click" class="btn btn-primary" />
        </div>
    </div>
    @if (ViewBag.Ans != null)
    {
        <div class="row mt-2">
            <div class="col">
                @Html.Label("Response : ") @ViewBag.Ans
            </div>
        </div>
    }
}
