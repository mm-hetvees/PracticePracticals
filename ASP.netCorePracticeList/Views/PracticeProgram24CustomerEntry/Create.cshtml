@model ASP.netCorePracticeList.Database.Model.CustomerEntryTable

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Customer Entry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label"></label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customeraddress" class="control-label"></label>
                <textarea asp-for="Customeraddress" class="form-control" rows="2" cols="10" ></textarea>
                <span asp-validation-for="Customeraddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerContactNo" class="control-label"></label>
                <input asp-for="CustomerContactNo" class="form-control" type="number" />
                <span asp-validation-for="CustomerContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCity" class="control-label"></label>
                @Html.DropDownList("CustomerCity", null, null,htmlAttributes:new { @class="form-control"})
                <span asp-validation-for="CustomerCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCountry" class="control-label"></label>
                @Html.DropDownList("CustomerCountry", null, null, htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CustomerCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" name="btnAction"/>
                <input type="submit" value="Reset" class="btn btn-secondary" name="btnAction"/>
            </div>
        </form>
    </div>
</div>


