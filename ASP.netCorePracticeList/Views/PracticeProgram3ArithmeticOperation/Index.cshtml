@model ASP.netCorePracticeList.Models.ArithmeticOperation

@{
    ViewData["Title"] = "Index";
}

<h1>Arithmetic Operation</h1>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-2">
            @Html.Label("Number 1:")
        </div>
        <div class="col-4">
            @Html.TextBoxFor(model => model.no1, null, htmlAttributes: new { @class = "form-control", @type = "number", @min = "0" })
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-2">
            @Html.Label("Number 2:")
        </div>
        <div class="col-4">
            @Html.TextBoxFor(model => model.no2, null, htmlAttributes: new { @class = "form-control", @type = "number", @min = "0" })
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-1">
            <input type="submit" class="btn btn-secondary" value="+" name="btnAction" />
        </div>
        <div class="col-1">
            <input type="submit" class="btn btn-secondary" value="-" name="btnAction" />
        </div>
        <div class="col-1">
            <input type="submit" class="btn btn-secondary" value="*" name="btnAction" />
        </div>
        <div class="col-1">
            <input type="submit" class="btn btn-secondary" value="/" name="btnAction" />
        </div>
    </div>
    @if (ViewBag.ans != null)
    {
        <div class="row mt-2">
            <div class="col">
                @Html.Label("Your Answer Is :")@ViewBag.ans
            </div>
        </div>
    }
}