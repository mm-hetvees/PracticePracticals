@model ASP.netCorePracticeList.Models.DateTimePicker
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<h2>Date Time Picker</h2>
@using (Html.BeginForm())
{
    <div>
        <div class="row">
            <div class="col-md-2">
                @Html.Label("Choose a date :")
            </div>
            <div class="col-md-10">
                <div style="display:flex;">
                    @Html.TextBoxFor(model => model.EventDate, htmlAttributes: new { @class = "form-contol", @readonly = true, @id = "txtdate", @type = "text" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Submit" name="btnAction" class="btn btn-primary" />
                <input type="submit" value="Reset" name="btnAction" class="btn btn-warning" />
            </div>
        </div>
    </div>
    if (ViewBag.result != null)
    {
        <div class="row">
            <div class="col-md-12">
                @ViewBag.result
            </div>
        </div>
    }
}


@section Scripts
{
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#txtdate").datepicker({
                showOn: "button",
                buttonText: "Open DateTime Picker",
                dateFormat: "dd/mm/yy"
            });
        });
    </script>
}